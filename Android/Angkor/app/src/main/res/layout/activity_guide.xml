<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.tyche.mobile.angkortour.GuideActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <EditText
            android:layout_weight="1"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:id="@+id/edtFilter"
            android:hint="Finding guide"/>
        <ImageButton
            android:id="@+id/imbSearch"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:scaleType="fitCenter"
            android:src="@drawable/musica_searcher"
            />
    </LinearLayout>

    <ListView
        android:layout_marginTop="10dp"
        android:padding="4dp"
        android:id="@+id/guide_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/_item_info"
        android:dividerHeight="5dp">
    </ListView>

</LinearLayout>
