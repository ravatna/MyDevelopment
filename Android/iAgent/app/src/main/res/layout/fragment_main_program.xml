<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <Button
        android:id="@+id/btn_life_program"
        android:layout_width="120dp"

        android:layout_height="120dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"

        android:background="@drawable/hand_check"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="@string/life_insurance"
        android:shadowColor="@color/colorLightGrey"
        android:shadowDx="2"
        android:shadowDy="3"
        android:shadowRadius="1"
        android:textColor="#FFFFFF" />


    <Button
        android:id="@+id/btn_health_program"
        android:layout_width="120dp"
        android:maxWidth="280dp"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="20dp"
        android:background="@drawable/health_insurance"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="@string/health_insurance"
        android:textColor="#FFFFFF" />


    <Button
        android:layout_gravity="center_horizontal"
        android:id="@+id/btn_car_program"
        android:layout_width="120dp"
        android:maxWidth="280dp"
        android:layout_height="120dp"
        android:layout_margin="20dp"
        android:text="@string/car_insurance"
         android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="#FFFFFF"
        android:background="@drawable/car_insurance"
        />

</LinearLayout>